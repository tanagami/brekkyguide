<div class="container">
  <div class="user-selected" ><i class="fas fa-clipboard-check fa-fw"></i>都道府県：<span><%= @middle_class.name %></span></div>
  <h4><i class="fas fa-hand-point-right fa-fw c-seagreen"></i> 市区町村を選択</h4>
  <div class="row search-areas">
    <% @small_classes.each do |small_class| %>
      <% detail_class = DetailClass.find_by(small_class_id: small_class.id) %>
      <% if detail_class.present? %>
        <%= render 'areas/area_button', name: small_class.name, uri: "/detail_classes/#{small_class.id}" %>
      <% else %>
        <% middle_class = MiddleClass.find(small_class.middle_class_id) %>
        <div class="col-xs-4 col-sm-3 col-md-2">
          <%= link_to ({controller: "hotels",
              action: "new",
              largeclass: "japan",
              middleclass: middle_class,
              smallclass: small_class,
              detailclass: ""}) do %>
            <div class="area-name small-class">
              <p><%= small_class.name %></p>
            </div>
          <% end %>
        </div>  
      <% end %>
    <% end %>
  </div>
</div>

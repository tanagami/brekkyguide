<% if hotels %>
  <div class="row">
    <% hotels.each do |hotel| %>
      <div class="item">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <img src="<%= hotel.image_url %>" alt="" >
            </div>
            <div class="panel-body">
              <p class="item-title"><%= hotel.name %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>Brekky Guide</h1>
        <p>朝食の美味しいホテルを探せるサイト</p>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <h3><i class="fas fa-search fa-fw c-orange"></i>キーワードから探す</h3>
  <div class="row search-keywords">
    <div class="text-center col-sm-12">
      <%= form_tag(new_hotel_path, method: :get, class: 'form-inline') do %>
        <div class="form-group">
          <%= text_field_tag :keyword, @keyword, class: 'form-control input-lg', placeholder: "キーワードを入力", size: 40 %>
        </div>
        <%= submit_tag 'ホテルを検索', class: 'btn btn-primary btn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h3><i class="fas fa-map-marker-alt fa-fw c-seagreen"></i>エリアから探す</h3>
  <div class="row search-areas">
    <%= render 'areas/area_button', name: "北海道", uri: "/small_classes/1" %>
    <%= render 'areas/area_button', name: "東北", uri: "/middle_classes?min=2&max=7" %>
    <%= render 'areas/area_button', name: "関東", uri: "/middle_classes?min=8&max=14" %>
    <%= render 'areas/area_button', name: "甲信越", uri: "/middle_classes?id[]=15&id[]=19&id[]=20" %>
    <%= render 'areas/area_button', name: "北陸", uri: "/middle_classes?min=16&max=18" %>
    <%= render 'areas/area_button', name: "東海", uri: "/middle_classes?min=21&max=24" %>
    <%= render 'areas/area_button', name: "関西・近畿", uri: "/middle_classes?min=25&max=30" %>
    <%= render 'areas/area_button', name: "中国", uri: "/middle_classes?min=31&max=35" %>
    <%= render 'areas/area_button', name: "四国", uri: "/middle_classes?min=36&max=39" %>
    <%= render 'areas/area_button', name: "九州", uri: "/middle_classes?min=40&max=46" %>
    <%= render 'areas/area_button', name: "沖縄", uri: "/small_classes/47" %>
  </div>
</div>
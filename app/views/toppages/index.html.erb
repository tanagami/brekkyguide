<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>Brekky Guide</h1>
          <% unless logged_in? %>
            <%= link_to 'Brekky Guideを始める', signup_path, class: 'btn btn-success btn-lg' %>
          <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="search">
  <div class="row">
    <div class="text-center">
      <%= form_tag(new_hotel_path, method: :get, class: 'form-inline') do %>
        <div class="form-group">
          <%= text_field_tag :keyword, @keyword, class: 'form-control input-lg', placeholder: "キーワードを入力", size: 40 %>
        </div>
        <%= submit_tag 'ホテルを検索', class: 'btn btn-success btn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<% @prefectures.each do |prefecture| %>

<%= link_to prefecture.name, "/show_small/#{prefecture.id}" %>

<br><br>

<% end %>
